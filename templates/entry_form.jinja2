{% extends "base.jinja2" %}
{% block body %}

{% if request.authenticated_userid %}
    <form action="{{ request.route_url('add') }}" method="POST">

      <h3>Add Journal Entry</h3>

      <label for="entry_name">Entry title:</label>
      <input type="text" id="title" name="title" value="{{ data.title }}">

      <label for="entry_text">Entry text:</label>
      <textarea id="text" name="text">{{ data.text|safe }}</textarea>

      {% if data.created %}
      <p>Last updated on: {{ data.created }}</p>
      {% endif %}

      <input type="hidden" id="entry_id" value="{{ data.id }}">

      <button type="submit">Update Entry</button>

    </form>

{% else %}

<section>

  <p>
    Please <a href="{{ request.route_url('login:page', page='entry_form') }}">log in</a>
    to add or update an entry.
  </p>

</section>

{% endif %}

{% endblock %}
